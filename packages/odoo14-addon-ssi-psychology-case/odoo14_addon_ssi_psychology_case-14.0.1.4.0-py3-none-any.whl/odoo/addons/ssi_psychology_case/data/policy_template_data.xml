<odoo>
<data noupdate="1">
<record id="policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_psychology_case" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_open" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','open_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('psychology_case_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','=','open')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('psychology_case_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_cancel" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','in',['draft','open','done'])]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('psychology_case_validator_group')])]" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = True
if document.state == "done" and document.amount_realized > 0.0:
    result = False</field>
</record>

<record id="policy_template_restart" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','in',['cancel','reject'])]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('psychology_case_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_reject" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_approve" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_manual_number" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','psychology.case'),('name','=','manual_number_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','psychology.case'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('psychology_case_validator_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>
</data>
</odoo>
